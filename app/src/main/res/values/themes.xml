<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ReuniteApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maroon</item>
        <item name="colorPrimaryVariant">@color/maroon</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Font family -->
        <item name="android:fontFamily">@font/poppins_extralight</item>
        <!-- Letter spacing -->
        <item name="android:letterSpacing">0</item>
        <!-- Default background color -->
        <item name="android:windowBackground">@color/light_beige</item>
        <!-- Customize your theme here. -->

        <!-- Style for EditText -->
        <item name="editTextStyle">@style/AppTheme.EditText</item>
    </style>

    <!-- Style for EditText -->
    <style name="AppTheme.EditText" parent="Widget.MaterialComponents.TextInputEditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
