<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Lost Items Header -->
    <TextView
        android:id="@+id/lostItemsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Lost Items"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <!-- RecyclerView for Lost Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLostItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Found Items Header -->
    <TextView
        android:id="@+id/foundItemsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Found Items"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <!-- RecyclerView for Found Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFoundItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Reunited Items Header -->
    <TextView
        android:id="@+id/reunitedItemsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Reunited Items"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <!-- RecyclerView for Reunited Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReunitedItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>